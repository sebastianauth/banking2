<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="1" author="sebastian">
		<createTable tableName="account">
			<column name="id" type="int" autoIncrement="true" remarks="primary key">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="account_number" type="varchar(100)" remarks="iban or credit card number">
				<constraints nullable="false" />
			</column>
			<column name="account_type" type="varchar(20)" remarks="Type: Credit Card or Giro" />
			<column name="description" type="varchar(150)" remarks="some description" />
		</createTable>
		<rollback>
			<dropTable tableName="account" />
		</rollback>
		<comment>table to store account information</comment>
	</changeSet>
	
		<changeSet id="2" author="sebastian">
		<createTable tableName="transaction">
			<column name="id" type="int" autoIncrement="true" remarks="primary key">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="account_fk" type="int" remarks="Account foreign key" />
			<column name="value_date" type="date" remarks="Value date" />
			<column name="booking_date" type="date" remarks="Buchungstag, Belegdatum" />
			<column name="amount" type="numeric(6,2)" remarks="Amount" />
			<column name="payment_details" type="varchar(70)" remarks="Verwendungszweck" />
			<column name="transaction_type" type="varchar(50)" remarks="Buchungstext" />
			<column name="recipient_initiator" type="varchar(50)" remarks="Auftraggeber/Beguenstigter" />
			<column name="account_number" type="varchar(30)" remarks="IBAN, Kontonummer" />
			<column name="bank_code" type="varchar(50)" remarks="Banking code BLZr" />
		</createTable>
		<addForeignKeyConstraint baseColumnNames="account_fk"
            baseTableName="transaction"
            constraintName="fk_transaction_account"
            deferrable="true"
            initiallyDeferred="true"
            onDelete="CASCADE"
            onUpdate="RESTRICT"
            referencedColumnNames="id"
            referencedTableName="account"/>
		<rollback>
			<dropTable tableName="transaction" />
			<dropForeignKeyConstraint baseTableName="transaction" constraintName="fk_transaction_account"/>
		</rollback>
		<comment>table to store bank transactions</comment>
	</changeSet>

</databaseChangeLog>